<%= link_to service_path(service), class: "service" do %>
  <div class="mb-3">
    <h4> <%= service.title %> </h4>
    <p> <%= service.description.truncate(50) %> </p>
    <p class="mt-4 text-xs"> <%= service.created_at.strftime("%F") %> </p>
  </div>
  <div class="flex items-center mt-auto">
    <div class="flex flex-col">
      <div> Ціна: </div>
      <b> <%= service.price %> </b>
    </div>
    <div class="button primary-button w-fit ml-auto"> Детально </div>
  </div>
<% end %>
